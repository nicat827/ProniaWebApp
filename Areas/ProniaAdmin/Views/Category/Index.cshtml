
@model PaginationVM<Category>
@{
    int count = (Model.CurrentPage - 1) * 3;
}


<div class="row">
    @if (TempData["success"] is not null)
    {
        <span class="success-span">@TempData["success"].ToString()</span>
    }
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories Table</h4>
                <a asp-controller="category" asp-action="create" class="btn btn-success">Create Category</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                   No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                   Products Count
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category category in Model.Items)
                            {
                                count++;
                                <tr>
                                    
                                    <td>
                                        @count
                                    </td>
                                   
                                    <td>
                                        @category.Name
                                    </td>
                                    <td>
                                        @category.Products.Count
                                    </td>
                                    <td>
                                        <a asp-controller="category" asp-action="update" asp-route-id="@category.Id" class="btn btn-warning btn-info"><i class="mdi mdi-pencil"></i></a>
                                        <a asp-controller="category" asp-action="delete" asp-route-id="@category.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                        <a asp-controller="category" asp-action="details" asp-route-id="@category.Id" class="btn btn-primary btn-info"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }
                           
                           
                        </tbody>
                    </table>
                </div>
            </div>
            <nav aria-label="Page navigation example">
                <ul class="pagination d-flex justify-content-center mb-5">
                    <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")"><a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@(Model.CurrentPage - 1)" style="width:120px">Previous</a></li>

                    @for (int i = 1; i <= Model.TotalPage; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")"><a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@i">@i</a></li>

                    }
                    <li class="page-item @(Model.CurrentPage >= Model.TotalPage ? "disabled" : "")"><a class="page-link" asp-controller="category" asp-action="index" asp-route-page="@(Model.CurrentPage + 1)" style="width:120px">Next</a></li>
                </ul>
            </nav>
        </div>

     
    </div>
</div>