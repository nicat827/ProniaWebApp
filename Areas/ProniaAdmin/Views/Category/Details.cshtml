@model Category

    <h1 style="text-align:center;">Id: @Model.Id | Category name: @Model.Name</h1>
@if (Model.Products.Count > 0)
{
    <div class="product-item-wrap row">
        @foreach (Product product in Model.Products)
        {
            <div class="col-xl-3 col-md-4 col-sm-6 p-2">
                <div class="product-item" d-flex justify-content-center flex-column>
                    <div class="product-img">
                        <a asp-controller="product" asp-action="details" asp-route-id="@product.Id">
                            <img class="primary-img"
                                 src="~/assets/images/website-images//@product.Images.Find(img => img.Type == ImageType.Main).ImageURL"
                                 alt="Product Images" />
                            <img class="secondary-img"
                                 src="~/assets/images/website-images//@product.Images.Find(img => img.Type == ImageType.Hover).ImageURL"
                                 alt="Product Images" />
                        </a>
                        <div class="product-add-action">
                            <ul>
                                <li>
                                    <a href="wishlist.html"
                                       data-tippy="Add to wishlist"
                                       data-tippy-inertia="true"
                                       data-tippy-animation="shift-away"
                                       data-tippy-delay="50"
                                       data-tippy-arrow="true"
                                       data-tippy-theme="sharpborder">
                                        <i class="pe-7s-like"></i>
                                    </a>
                                </li>
                                <li class="quuickview-btn"
                                    data-bs-toggle="modal"
                                    data-bs-target="#quickModal">
                                    <a href="#"
                                       data-tippy="Quickview"
                                       data-tippy-inertia="true"
                                       data-tippy-animation="shift-away"
                                       data-tippy-delay="50"
                                       data-tippy-arrow="true"
                                       data-tippy-theme="sharpborder">
                                        <i class="pe-7s-look"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="cart.html"
                                       data-tippy="Add to cart"
                                       data-tippy-inertia="true"
                                       data-tippy-animation="shift-away"
                                       data-tippy-delay="50"
                                       data-tippy-arrow="true"
                                       data-tippy-theme="sharpborder">
                                        <i class="pe-7s-cart"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="product-content" style="background-color:white; padding-left:20px;">
                        <a class="product-name" href="shop.html">@product.Name</a>
                        <div class="price-box pb-1">
                            <span class="new-price">$@product.Price</span>
                        </div>
                        <div class="rating-box">
                            <ul>
                                @for (int i = product.Rating; i > 0; i--)
                                {
                                    <li><i class="fa fa-star"></i></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>

}

else
{
    <h1 class="text-danger" style="text-align-center">Products wasnt defined!</h1>
}

