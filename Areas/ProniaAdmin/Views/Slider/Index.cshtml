@model List<Slider>
@{
    int count = 0;

}


<div class="row">
    @if (TempData["success"] is not null)
    {
        <span class="success-span">@TempData["success"].ToString()</span>
    }
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sliders Table</h4>
                <a asp-controller="slider" asp-action="create" class="btn btn-success">Create Slider</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Order
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slider slider in @Model)
                            {
                                count++;
                                <tr>

                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img style="width:100px; height:100px" src="~/uploads/slider/@slider.ImageURL" />
                                    </td>
                                    <td>
                                        @slider.Title
                                    </td>
                                    <td>
                                        @slider.Order
                                    </td>
                                    <td>
                                        <a class="btn btn-warning btn-info"><i class="mdi mdi-pencil"></i></a>
                                        <a class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                        <a asp-controller="slider" asp-action="details" asp-route-id="@slider.Id" class="btn btn-primary btn-info"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>