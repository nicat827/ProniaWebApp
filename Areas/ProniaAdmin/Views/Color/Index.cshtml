@model List<Color>
@{
    int count = 0;
    
    
}


<div class="row">
    @if (TempData["success"] is not null)
    {
        <span class="success-span">@TempData["success"].ToString()</span>
    }
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Colors Table</h4>
                <a asp-controller="color" asp-action="create" class="btn btn-success">Create Color</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Products Count
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Color color in Model)
                            {
                                count++;
                                <tr>

                                    <td>
                                        @count
                                    </td>

                                    <td>
                                        @color.Name
                                    </td>
                                    <td>
                                        @color.ProductColors.Count
                                    </td>
                                    <td>
                                        <a class="btn btn-warning btn-info"><i class="mdi mdi-pencil"></i></a>
                                        <a class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                        <a class="btn btn-primary btn-info"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>