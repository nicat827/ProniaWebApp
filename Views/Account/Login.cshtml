@model UserLoginVM

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="/../../../assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login Page</h2>
                        <ul>
                            <li>
                                <a asp-controller="home" asp-action="index">Home</a>
                            </li>
                            <li>Login</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Login</h4>
                            <div class="row">
                                <div class="text-danger" style="margin-bottom:10px; font-weight:600;" asp-validation-summary="ModelOnly"></div>
                                <div class="col-lg-12">
                                    <label asp-for="UsernameOrEmail">Email or Username</label>
                                    @if (Model?.IsLocked is not null)
                                    {
                                        <input  disabled asp-for="UsernameOrEmail" placeholder="Email or Username" />

                                    }
                                    else
                                    {
                                        <input  asp-for="UsernameOrEmail" placeholder="Email or Username" />

                                    }

                                    <span class="text-danger" asp-validation-for="UsernameOrEmail" ></span>
                                </div>
                                <div class="col-lg-12">
                                    <label asp-for="Password">Password</label>
                                    <input disabled="@(Model?.IsLocked is not null ? true : false)" asp-for="Password" placeholder="Password" />
                                    <span class="text-danger" asp-validation-for="Password"></span>

                                </div>
                                <div class="col-md-8 mt-3">
                                    <div class="check-box">
                                        <input asp-for="IsRemembered" />
                                        <label asp-for="IsRemembered">Remember me</label>
                                    </div>
                                </div>

                                <div class="col-6 pt-5">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Login
                                    </button>
                                </div>
                                <div class="col-6 d-flex align-items-center pt-5">
                                    <a asp-action="register" asp-controller="account">Dont have account yet?</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>