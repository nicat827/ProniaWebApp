@model RegisterUserVM

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="../../../assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Register Page</h2>
                        <ul>
                            <li>
                                <a asp-controller="home" asp-action="index">Home</a>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> 
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                
                <div class="col-lg-6 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="text-danger" asp-validation-summary="ModelOnly"> </div>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" placeholder="Name" />
                                    <span class="text-danger" asp-validation-for="Name" ></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Surname"></label>
                                    <input asp-for="Surname" placeholder="Surname" />
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Username"></label>
                                    <input asp-for="Username" placeholder="Username" />
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Email">Email Address</label>
                                    <input asp-for="Email" placeholder="Email Address" />
                                    <span class="text-danger" asp-validation-for="Email"></span>

                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Password" ></label>
                                    <input asp-for="Password" placeholder="Password" />
                                    <span class="text-danger" asp-validation-for="Password"></span>

                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div class="col-md-12">
                                    @foreach (Gender gender in System.Enum.GetValues(typeof(Gender)))
                                    {
                                        <div class="d-flex align-items-center justify-content-start">
                                            <input style="max-width:30px" asp-for="Gender" value="@gender" type="radio" name="gender" id="@gender" checked="@(gender == Gender.Male ? true : false)" />
                                            <label for="@gender">@gender</label>
                                        </div>
                                    }
                                    
                                    <span class="text-danger" asp-validation-for="Gender"></span>

                                </div>
                                
                                <div class="col-6">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary" type="submit">
                                        Register
                                    </button>
                                </div>
                                <div class="col-6 d-flex align-items-center">
                                    <a asp-action="login" asp-controller="account">Already have account?</a>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>